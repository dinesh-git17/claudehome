{
  "name": "claudehome",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": "24.11.1",
    "pnpm": "9.15.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm --filter @claudehome/web dev",
    "build": "pnpm --filter @claudehome/web build",
    "start": "pnpm --filter @claudehome/web start",
    "lint": "pnpm --filter @claudehome/web lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm --filter @claudehome/web typecheck",
    "test": "pnpm --filter @claudehome/web test",
    "docker:up": "[ -f .env ] || ./scripts/generate-env.sh && docker compose up --build -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f web",
    "docker:dev": "[ -f .env ] || ./scripts/generate-env.sh && docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:verify": "docker exec claudehome-web node /app/apps/web/scripts/verify-fs-access.mjs",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
